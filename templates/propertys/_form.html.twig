<div class="container m-5">
    <h1 class="m-4">Création d'une Property</h1>

    {% for message in app.flashes('success') %}
    <div class="alert alert-success mt-4">
        {{ message }}
    </div>
    {% endfor %}
    {{ form_start(form) }}

    <div class="container">
        <div class="card mb-4">
            <div class="row m-4">
                <h3 class="m-4 text-center text-success">Coordonnées</h3>
                <div class="form-group col-6">
                    {{ form_label(form.civilite) }}
                    {{ form_widget(form.civilite) }}
                    <div class="form-error">
                        {{ form_errors(form.civilite) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    <div class="form-error">
                        {{ form_errors(form.nom) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.prenom) }}
                    {{ form_widget(form.prenom) }}
                    <div class="form-error">
                        {{ form_errors(form.prenom) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.telephone) }}
                    {{ form_widget(form.telephone) }}
                    <div class="form-error">
                        {{ form_errors(form.telephone) }}
                    </div>
                </div>
                <div class="form-group col-12">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                    <div class="form-error">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card mb-4">
            <div class="row m-4">
                <h3 class="m-4 m-4 text-center text-success">Infos Détails</h3>

                <div class="form-group col-12">
                    {{ form_label(form.reference) }}
                    {{ form_widget(form.reference) }}
                    <div class="form-error">
                        {{ form_errors(form.reference) }}
                    </div>
                </div>

                <div class="form-group col-6">
                    {{ form_label(form.category) }}
                    {{ form_widget(form.category) }}
                    <div class="form-error">
                        {{ form_errors(form.category) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.typeproperty) }}
                    {{ form_widget(form.typeproperty) }}
                    <div class="form-error">
                        {{ form_errors(form.typeproperty) }}
                    </div>
                </div>

                <div class="form-group col-6">
                    {{ form_label(form.surface) }} <span>M²</span>
                    {{ form_widget(form.surface) }}
                    <div class="form-error">
                        {{ form_errors(form.surface) }}
                    </div>
                </div>

                <div class="form-group col-6">
                    {{ form_label(form.prix) }} <span>€</span>
                    {{ form_widget(form.prix) }}
                    <div class="form-error">
                        {{ form_errors(form.prix) }}
                    </div>
                </div>
                <div class="container mb-4">
                    <div class="row">
                        <div class="form-group col-3">
                            {{ form_label(form.chambres) }}
                            {{ form_widget(form.chambres) }}
                            <div class="form-error">
                                {{ form_errors(form.chambres) }}
                            </div>
                        </div>
                        <div class="form-group col-3">
                            {{ form_label(form.numero_etage) }}
                            {{ form_widget(form.numero_etage) }}
                            <div class="form-error">
                                {{ form_errors(form.numero_etage) }}
                            </div>
                        </div>
                        <div class="form-group col-3">
                            {{ form_label(form.etages) }}
                            {{ form_widget(form.etages) }}
                            <div class="form-error">
                                {{ form_errors(form.etages) }}
                            </div>
                        </div>

                        <div class="form-group col-3">
                            {{ form_label(form.salle_bains) }}
                            {{ form_widget(form.salle_bains) }}
                            <div class="form-error">
                                {{ form_errors(form.salle_bains) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card mb-4">
            <div class="row m-4">
                <h3 class="m-4 m-4 text-center text-success">Localisation</h3>
                <div class="form-group col-6">
                    {{ form_label(form.adresse) }}
                    {{ form_widget(form.adresse) }}
                    <div class="form-error">
                        {{ form_errors(form.adresse) }}
                    </div>
                </div>
                <div class="form-group col-6">
                    {{ form_label(form.ville) }}
                    {{ form_widget(form.ville) }}
                    <div class="form-error">
                        {{ form_errors(form.ville) }}
                    </div>
                </div>

                <div class="form-group col-6">
                    {{ form_label(form.code_postale) }}
                    {{ form_widget(form.code_postale) }}
                    <div class="form-error">
                        {{ form_errors(form.code_postale) }}
                    </div>
                </div>

                <div class="form-group col-6">
                    {{ form_label(form.region) }}
                    {{ form_widget(form.region) }}
                    <div class="form-error">
                        {{ form_errors(form.region) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card mb-4">
            <div class="row m-4">
                <h3 class="m-4 text-center text-success">Installations</h3>
                <div class="col-4">{{ form_row(form.internet, {label_attr: {class: 'checkbox-custom'} }) }}</div>
                <div class="col-4">{{ form_row(form.balcon, {label_attr: {class: 'checkbox-custom'} }) }}</div>
                <div class="col-4">{{ form_row(form.salle_sport, {label_attr: {class: 'checkbox-custom'} }) }}</div>
                <div class="col-4">{{ form_row(form.piscine, {label_attr: {class: 'checkbox-custom'} }) }}</div>
                <div class="col-4">{{ form_row(form.garage, {label_attr: {class: 'checkbox-custom'} }) }}</div>
                <div class="col-4">{{ form_row(form.camera_surveillance, {label_attr: {class: 'checkbox-custom'} }) }}
                </div>
            </div>
        </div>
    </div>


    <div class="container">
        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description) }}
            <div class="form-error">
                {{ form_errors(form.description) }}
            </div>
        </div>
        <div class="form-group mt-4">
            {{ form_widget(form) }}
            <button class="btn btn-warning">{{ button_label|default('Valider') }}</button>
            <a href="{{ path('app_propertys_index') }}" class="btn btn-success">Retour à la Liste</a>
        </div>
    </div>
    {{ form_end(form) }}
</div>